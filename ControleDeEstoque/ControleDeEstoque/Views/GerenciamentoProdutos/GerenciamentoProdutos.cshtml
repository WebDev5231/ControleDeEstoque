@model IEnumerable<ControleDeEstoque.Model.Produtos>

@{
    ViewBag.Title = "Gerenciamento de Produtos";
}

<div class="container mt-4">
    <h1 class="mb-4">Gerenciamento de Produtos</h1>

    <div class="mb-3">
        <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Create", "Produtos")'">Adicionar Produto</button>
    </div>

    <div class="table-responsive">
        <table id="produtosTable" class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preço de Compra</th>
                    <th>Preço de Venda</th>
                    <th>Quantidade</th>
                    <th>Validade</th>
                    <th>Categoria</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                    <tr>
                        <td>@produto.Nome</td>
                        <td>@produto.Descricao</td>
                        <td>@produto.PrecoCompra.ToString("C")</td>
                        <td>@produto.PrecoVenda.ToString("C")</td>
                        <td>@produto.QuantidadeEstoque</td>
                        <td>@produto.DataValidade.ToString("dd/MM/yyyy")</td>
                        <td>@produto.Categoria</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "Produtos", new { Id = produto.Id })">Editar</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Produtos", new { Id = produto.Id })">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#produtosTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                }
            });
        });
    </script>
}
